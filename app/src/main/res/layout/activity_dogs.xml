<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogsActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dogsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dogs_adoptdog"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:textSize="25sp"
        android:textColor="@color/dark_blue"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dogs_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabSelectedTextColor="@color/dark_blue"
        app:tabIndicatorColor="@color/dark_blue">


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/dogs_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>